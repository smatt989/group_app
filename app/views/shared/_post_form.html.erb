<h1>Create a new post </h1>


<%= form_for Post.new do |p| %>
  <%= render 'shared/error_messages', object: p.object %>
  <div class="field">
    <%= p.text_field :source, placeholder: "Post url..." %>
    <%= p.hidden_field :type_name, :value => "link" %>
    <%= p.hidden_field :type_id, :value => "1" %>
    <%= p.hidden_field :room_id, :value => @room.id %>
  </div>
  <%= p.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>